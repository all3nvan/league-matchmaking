<div class="container">
	<div class="text-center">
		<%= link_to 'Rankings', root_path, class: 'btn btn-primary btn-lg' %>
		<%= link_to 'Matchmaking', root_path, class: 'btn btn-primary btn-lg' %>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Rank</th>
				<th>Summoner</th>
				<th>Rating</th>
				<th>Wins</th>
				<th>Losses</th>
			</tr>
		</thead>
		<tbody>
			<% players_by_rank(@players).each.with_index do |player, i| %>
				<tr>
					<td><%= i + 1 %></td>
					<td><%= player.name %></td>
					<td><%= player.trueskill.round(3) %></td>
					<td><%= player.wins %></td>
					<td><%= player.losses %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="container">
	<div class="row">
		<% create_teams(@selected_player_ids).each.with_index do |team, i| %>
			<div class="col-sm-6 col-md-6 text-center">
				<h3>Team <%= i + 1 %></h3>
				<div>
					<% team.each do |player| %>
						<div><%= player.name %></div>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>